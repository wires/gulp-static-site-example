doctype html
html
    head
        link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.4.2/pure-min.css')
        link(rel='stylesheet', href='css/style.css')
    body
        div.pure-g-r#main
            div.pure-u-1-5
                ul
                    each file, fn in siteContents
                        li
                            if file.isCurrent
                                = file.shortName
                            else
                                a(href=file.link)= file.shortName
            div.pure-u-4-5
                != fileContents
